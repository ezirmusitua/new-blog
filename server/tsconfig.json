{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./app",
    "removeComments": true,
    // "allowJs": true,
    /* Strict Type-Checking Options */
    // "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    /* Experimental Options */
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
